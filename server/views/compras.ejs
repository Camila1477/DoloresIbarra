<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Papeleria</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css"
    integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
  <link rel="stylesheet" href="main.css">
  <style>
    .img-fixed-size {
      width: 100%;
      height: auto;
    }
  </style>
</head>

<body>
  <nav class="navbar navbar-dark bg-dark">
    <a href="" class="navbar-brand mx-auto">PAPELERIA ABEJITA</a>
  </nav>
  <div class="container">
    <div class="row">
      <% for(let i=0; i < productos.length; i++) { %>
      <% if(productos[i].inventario > 0) { %>
      <div class="col-md-4 mt-4">
        <div class="card">
          <h3 class="card-title"><%= productos[i].nombre %></h3>
          <img src="<%= productos[i].path %>" class="img-fluid img-fixed-size card-img-top"
            alt="<%= productos[i].filename %>">
          <div class="card-body">
            <form action="/comprar" method="post">
              <input type="hidden" name="producto" value="<%= productos[i].nombre %>">
              <div class="form-group">
                <label><%= productos[i].descripcion %></label><br>
                <label>Precio: <%= productos[i].precio %></label>
              </div>
              <div class="form-group">
                <input name="cantidad" type="text" class="form-control" placeholder="Cantidad">
              </div>
              <input type="submit" class="btn btn-primary" value="Comprar">
            </form>
          </div>
        </div>
      </div>
      <% } %>
      <% } %>
    </div>
  </div>

  <script>
    // Obtener el inventario de cada producto y ocultar la imagen si el inventario es cero o menos
    window.addEventListener('DOMContentLoaded', (event) => {
      const images = document.querySelectorAll('.card-img-top');
      images.forEach(img => {
        if (parseInt(img.dataset.inventario) <= 0) {
          img.style.display = 'none';
        }
      });
    });
  </script>

</body>

</html>
